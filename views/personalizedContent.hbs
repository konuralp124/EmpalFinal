<h1>Personalized Content Feed</h1>
<form action="/search-content" method="post">
    <label for="tag">Enter Tag:</label>
    <input type="text" id="tag" name="tag" placeholder="e.g., diabetes" required>
    <button type="submit">Search</button>
</form>
{{#each contents}}
  <div class="content">
    <h2>{{this.title}}</h2>
    <p>{{this.body}}</p>
    {{#if this.image}}
      <img src="{{this.image}}" alt="Content Image" style="max-width: 300px;">
    {{/if}}
    <h3>Comments:</h3>
    {{#if this.comments}}
      <ul>
        {{#each this.comments}}
          <li><strong>{{this.commenterUsername}}:</strong> {{this.text}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p>No comments yet. Be the first to comment!</p>
    {{/if}}
    <form action="/content/{{this._id}}/comment" method="post">
      <textarea name="commentText" placeholder="Write a comment..." required></textarea>
      <button type="submit">Post Comment</button>
    </form>
  </div>
{{/each}}

